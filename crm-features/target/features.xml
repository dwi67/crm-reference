<?xml version="1.0" encoding="UTF-8"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.0.0" name="adesso-fuse-repository/1.0.0-SNAPSHOT">

    <!--
    To deploy features on a stand alone fuse instance:

    features:addurl mvn:ch.adesso/crm-features/1.0.0-SNAPSHOT/xml/features 
    features:install crm-standalone
	features:install crm-on-openshift

    -->
    
    <feature name="crm-standalone" version="1.0.0-SNAPSHOT">
        <feature version="1.0.0-SNAPSHOT">crm-datasource</feature>
        <feature version="1.0.0-SNAPSHOT">crm-service</feature>
        <feature version="1.0.0-SNAPSHOT">crm-rest</feature>
        <feature version="1.0.0-SNAPSHOT">crm-soap</feature>
        <feature version="1.0.0-SNAPSHOT">crm-import</feature>
        <feature version="1.0.0-SNAPSHOT">crm-proxy</feature>
    </feature>

    <feature name="crm-on-openshift" version="1.0.0-SNAPSHOT">
        <feature version="1.0.0-SNAPSHOT">crm-os-datasource</feature>
        <feature version="1.0.0-SNAPSHOT">crm-service</feature>
        <feature version="1.0.0-SNAPSHOT">crm-soap</feature>
    </feature>

    <feature name="crm-datasource" version="1.0.0-SNAPSHOT">
        <feature>jpa</feature>
        <feature>hibernate</feature>
        <feature>transaction</feature>
        <feature>jndi</feature>
        <feature>connector</feature>
        <feature>camel-amqp</feature>
        <bundle>mvn:ch.adesso/crm-datasource/1.0.0-SNAPSHOT</bundle>
        <bundle>wrap:mvn:org.apache.derby/derbyclient/10.11.1.1</bundle>
    </feature>
    
    <feature name="crm-os-datasource" version="1.0.0-SNAPSHOT">
        <feature>jpa</feature>
        <feature>hibernate</feature>
        <feature>transaction</feature>
        <feature>jndi</feature>
        <feature>connector</feature>
        <feature>camel-amqp</feature>
        <bundle>mvn:ch.adesso/crm-os-datasource/1.0.0-SNAPSHOT</bundle>
        <bundle>mvn:org.postgresql/postgresql/9.4-1203-jdbc42</bundle>
    </feature>

	<feature name="crm-service" version="1.0.0-SNAPSHOT">
		<bundle>mvn:ch.adesso/crm-datasource/1.0.0-SNAPSHOT</bundle>
		<bundle>mvn:ch.adesso/crm-persistence/1.0.0-SNAPSHOT</bundle>
		<bundle>mvn:ch.adesso/crm-service/1.0.0-SNAPSHOT</bundle>
	</feature>

	<feature name="crm-rest" version="1.0.0-SNAPSHOT">
		<bundle>mvn:ch.adesso/crm-rs/1.0.0-SNAPSHOT</bundle>
	</feature>

	<feature name="crm-soap" version="1.0.0-SNAPSHOT">
		<bundle>mvn:ch.adesso/crm-ws/1.0.0-SNAPSHOT</bundle>
	</feature>

	<feature name="crm-import" version="1.0.0-SNAPSHOT">
		<bundle>mvn:ch.adesso/crm-camel/1.0.0-SNAPSHOT</bundle>
	</feature>    

    <feature name="crm-proxy" version="1.0.0-SNAPSHOT">
        <feature>camel-jetty</feature>
        <bundle>mvn:ch.adesso/crm-secureproxy/1.0.0-SNAPSHOT</bundle>
    </feature>

</features>