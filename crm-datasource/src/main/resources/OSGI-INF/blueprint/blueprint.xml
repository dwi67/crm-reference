<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="postgresDataSourceBean" class="org.postgresql.ds.PGSimpleDataSource">
        <property name="serverName" value="localhost"/>
        <property name="portNumber" value="5432"/>
        <property name="databaseName" value="sampledb"/>
        <property name="user" value="admin"/>
        <property name="password" value="admin"/>
    </bean>

    <bean id="postgresDataSourceBeanXA" class="org.postgresql.ds.PGSimpleDataSource">
        <property name="serverName" value="localhost"/>
        <property name="portNumber" value="5432"/>
        <property name="databaseName" value="sampledb"/>
        <property name="user" value="admin"/>
        <property name="password" value="admin"/>
    </bean>

    <service id="dataSourceService" interface="javax.sql.DataSource" ref="postgresDataSourceBean">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/sqlDataSource" />
        </service-properties>
    </service>

    <service id="dataSourceServiceXA" interface="javax.sql.DataSource" ref="postgresDataSourceBeanXA">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/xaSqlDataSource" />
            <entry key="aries.xa.name" value="xaSqlDataSource" />
            <entry key="aries.xa.exceptionSorter" value="known" />
            <entry key="aries.xa.pooling" value="true" />
            <entry key="aries.xa.poolMaxSize" value="10" />
            <entry key="aries.xa.poolMinSize" value="0" />
            <entry key="aries.xa.transaction" value="xa" />
            <entry key="aries.xa.partitionStrategy" value="none" />
            <entry key="aries.xa.connectionMadIdleMinutes" value="15" />
            <entry key="aries.xa.connectionMaxWaitMilliseconds" value="5000" />
            <entry key="aries.xa.allConnectionsEquals" value="true" />
        </service-properties>
    </service>

</blueprint>